{
  "name": "@vikeriait/nuxt-viewport",
  "version": "1.0.0",
  "description": "A lightweight, high-performance Vue 3 directive and composable to detect when elements enter the viewport, featuring \"Smart Presets\", automatic margin compensation for smooth reveals, and seamless Tailwind CSS integration.",
  "homepage": "https://nuxt-viewport.vikeria.it",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vikeriait/nuxt-viewport"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types.d.mts",
      "import": "./dist/module.mjs"
    }
  },
  "main": "./dist/module.mjs",
  "typesVersions": {
    "*": {
      ".": [
        "./dist/types.d.mts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prepack": "nuxt-module-build build",
    "dev": "npm run dev:prepare && nuxi dev playground",
    "dev:build": "nuxi build playground",
    "dev:prepare": "nuxt-module-build build --stub && nuxt-module-build prepare && nuxi prepare playground",
    "release": "npm run lint && npm run test && npm run prepack && changelogen --release && npm publish && git push --follow-tags",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:types": "vue-tsc --noEmit && cd playground && vue-tsc --noEmit",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "dependencies": {
    "@nuxt/kit": "^4.2.2",
    "@vikeriait/vue-viewport": "^1.0.0",
    "defu": "^6.1.4"
  },
  "devDependencies": {
    "@nuxt/devtools": "^3.1.1",
    "@nuxt/eslint-config": "^1.12.1",
    "@nuxt/module-builder": "^1.0.2",
    "@nuxt/schema": "^4.2.2",
    "@nuxt/test-utils": "^3.21.0",
    "@types/node": "latest",
    "changelogen": "^0.6.2",
    "eslint": "^9.39.2",
    "nuxt": "^4.2.2",
    "typescript": "~5.9.3",
    "vitepress": "2.0.0-alpha.15",
    "vitest": "^4.0.16",
    "vue-tsc": "^3.2.1"
  }
}
